{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "dragonhorde/tagGroup",
    "title": "Tag Group",
    "description": "A group of tags",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "readOnly": true
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        }
    },
    "required": ["name"]
}